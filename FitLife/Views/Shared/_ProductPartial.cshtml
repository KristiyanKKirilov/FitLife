@model ProductServiceModel
@inject ITrainerService trainerService
@inject IProductService eventService

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="TrainingProgram Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6><b>@Model.Price lv</b></h6>            
            <br />
            <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>

            @if(await trainerService.ExistsByIdAsync(User.Id()) == false)
            {
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Order" asp-action="Cart" asp-route-id="@Model.Id"
                       class="btn btn-warning">Add to Cart</a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Register"
                       class="btn btn-primary">Add to Cart</a>
                }
            }
            

        </div>
    </div>
</div>
