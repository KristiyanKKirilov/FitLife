@model TrainingProgramModifyModel

@{
    ViewBag.Title = "Modify Training Program";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Modify">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.ImageUrl" alt="TrainingProgram Image">
        </div>
        <div class="col-md-8">
             <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
            </div>
             <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DurationDays" class="control-label"></label>
                <input asp-for="DurationDays" class="form-control" />
            </div>           
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit">Select Category</label>
                <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Category...</option>
                    @foreach (var category in Model.TrainingProgramCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modify" class="btn btn-warning" />
            </div>

            <a asp-controller="TrainingProgram" asp-action="Delete" asp-route-id="@Model.Id" method="post"
               class="btn btn-danger">Delete</a>
        </div>
    </div>
</form>
