@model ProductDetailsServiceModel
@inject ITrainerService trainerService
@inject IProductService productService

@{
    ViewBag.Title = "Product Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImageUrl" alt="Product Image">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Name</u></p>            
            <p>
                Description:
                <b>@Model.Description</b>
            </p>
            <p>
                Price:
                <b>@Model.Price</b>
            </p>            

            <div class="form-inline">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-warning" asp-controller="Order" asp-action="Cart"
                           asp-route-id="@Model.Id">Add to Cart</a>              
                                               
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Register"
                       class="btn btn-primary">Add to Cart</a>

                }
            </div>            
            
        </div>
    </div>
</div>
