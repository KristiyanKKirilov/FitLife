<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FitLife</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FitLife.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/layout-admin.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3" >
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Dashboard">FitLife</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Participant" asp-action="Hire">Hire a Trainer</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Options">Product's options</a>
						</li>	
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Trainer" asp-action="All">All Trainers</a>
						</li>

					</ul>
					<partial name="_AdminPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - FitLife - <span class="text-danger">Admin Area</span>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
