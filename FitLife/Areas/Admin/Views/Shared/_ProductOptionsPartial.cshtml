@model ProductServiceModel
@inject ITrainerService trainerService
@inject IProductService eventService
<link rel="stylesheet" href="~/css/Products.css" />

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6><b>@Model.Price lv</b></h6>
            <br />
            <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
            <a asp-area=""  asp-controller="Product" asp-action="Modify" asp-route-id="@Model.Id"
               class="btn btn-warning">Modify</a>
               <br/>
            <form class="ml-2" asp-area="" asp-controller="Product"
                  asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <input class="btn btn-danger" type="submit" value="Delete" />
            </form>
        </div>
    </div>
</div>


